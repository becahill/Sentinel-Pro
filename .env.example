SENTINEL_DB_URL=postgresql+psycopg://sentinel:sentinel@localhost:5432/sentinel
SENTINEL_API_KEYS=admin:local-admin,analyst:local-analyst,ingest:local-ingest
SENTINEL_AUTH_REQUIRED=1
SENTINEL_ALLOWED_ORIGINS=http://localhost
SENTINEL_REDACT_PII=1
SENTINEL_DISABLE_TOXICITY=1
WEB_CONCURRENCY=2
WEB_THREADS=4
WEB_TIMEOUT=60
SENTINEL_RATE_LIMIT_REQUESTS=120
SENTINEL_RATE_LIMIT_WINDOW_SEC=60
SENTINEL_QUEUE_WORKERS=2
SENTINEL_QUEUE_MAX_SIZE=1000
SENTINEL_QUEUE_RESULT_TTL_SEC=3600
SENTINEL_LOG_JSON=1
SENTINEL_LOG_LEVEL=INFO
